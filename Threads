#include<stdio.h>
#include<omp.h>

int main () {
	int i, threadId;
	
	#pragma omp parallel num_threads(8) //Regi√£o Paralela
	{
		int somaLocal = 0;
		threadId = omp_get_thread_num();
		
		#pragma omp for
		for(i = 0; i < 100; i++) {
			somaLocal += i; //Acumula parcialmente por thread
		}
		
		#pragma omp barrier
		
		printf("Valor por Thread: %d\n", somaLocal);
	}	
	
	return 0;
}
